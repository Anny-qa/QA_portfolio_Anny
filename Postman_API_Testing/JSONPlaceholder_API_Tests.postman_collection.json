    {
      "name": "POST Create New Post",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// ==========================\r",
              "// ТЕСТЫ ДЛЯ POST /posts\r",
              "// ==========================\r",
              "\r",
              "// 1. Проверка статуса 201 Created\r",
              "pm.test(\"✅ Статус 201 Created\", function () {\r",
              "    pm.response.to.have.status(201);\r",
              "});\r",
              "\r",
              "// 2. Проверка структуры созданного поста\r",
              "pm.test(\"✅ Созданный пост имеет все поля\", function () {\r",
              "    const responseData = pm.response.json();\r",
              "    pm.expect(responseData).to.be.an(\"object\");\r",
              "    pm.expect(responseData).to.have.all.keys(\"title\", \"body\", \"userId\", \"id\");\r",
              "});\r",
              "\r",
              "// 3. Проверка, что данные соответствуют отправленным\r",
              "pm.test(\"✅ Данные соответствуют отправленным\", function () {\r",
              "    const responseData = pm.response.json();\r",
              "    const requestData = JSON.parse(pm.request.body.raw);\r",
              "    \r",
              "    pm.expect(responseData.title).to.equal(requestData.title);\r",
              "    pm.expect(responseData.body).to.equal(requestData.body);\r",
              "    pm.expect(responseData.userId).to.equal(requestData.userId);\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n  \"title\": \"Мой новый пост\",\r\n  \"body\": \"Содержание нового поста\",\r\n  \"userId\": 1\r\n}",
