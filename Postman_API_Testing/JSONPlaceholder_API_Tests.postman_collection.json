      "name": "GET Single Post",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// ==========================\r",
              "// ТЕСТЫ ДЛЯ GET /posts/1\r",
              "// ==========================\r",
              "\r",
              "// 1. Проверка статуса\r",
              "pm.test(\"✅ Статус 200 OK\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "// 2. Проверка структуры ответа\r",
              "pm.test(\"✅ Ответ содержит ожидаемые поля\", function () {\r",
              "    const responseData = pm.response.json();\r",
              "    \r",
              "    pm.expect(responseData).to.be.an(\"object\");\r",
              "    pm.expect(responseData).to.have.all.keys(\r",
              "        \"userId\", \"id\", \"title\", \"body\"\r",
              "    );\r",
              "});\r",
              "\r",
              "// 3. Проверка конкретных значений\r",
              "pm.test(\"✅ ID поста равен 1\", function () {\r",
              "    const responseData = pm.response.json();\r",
              "    pm.expect(responseData.id).to.equal(1);\r",
              "});\r",
              "\r",
              "pm.test(\"✅ userId равен 1\", function () {\r",
              "    const responseData = pm.response.json();\r",
              "    pm.expect(responseData.userId).to.equal(1);\r",
              "});\r",
              "\r",
              "// 4. Проверка типов данных\r",
              "pm.test(\"✅ Все поля имеют правильный тип\", function () {\r",
              "    const responseData = pm.response.json();\r",
              "    \r",
              "    pm.expect(responseData.userId).to.be.a(\"number\");\r",
              "    pm.expect(responseData.id).to.be.a(\"number\");\r",
              "    pm.expect(responseData.title).to.be.a(\"string\");\r",
              "    pm.expect(responseData.body).to.be.a(\"string\");\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
